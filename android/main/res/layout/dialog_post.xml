<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#FFFFFF"
    android:orientation="vertical"
    android:padding="20dp"
    android:radius="16dp">

    <!-- 标题 -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginBottom="20dp"
        android:text="发布"
        android:textColor="#333333"
        android:textSize="18sp"
        android:textStyle="bold" />

    <!-- 四个板块 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center">

        <!-- 圈子动态 -->
        <LinearLayout
            android:id="@+id/post_circle"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:background="#F5F5F5"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:padding="16dp"
            android:layout_marginBottom="16dp"
            android:radius="12dp">

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="#FFF5E6"
                android:src="@drawable/ic_post"
                app:tint="#FF9800"
                android:padding="8dp"
                android:layout_marginRight="16dp"
                android:scaleType="centerInside" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="圈子动态"
                    android:textColor="#333333"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:text="发布动态（请发布到合适的分区）"
                    android:textColor="#999999"
                    android:textSize="13sp"
                    android:maxLines="2"
                    android:ellipsize="end" />
            </LinearLayout>

            <ImageView
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:src="@drawable/ic_arrow_right"
                app:tint="#999999"
                android:layout_marginLeft="8dp"
                android:scaleType="centerInside" />
        </LinearLayout>

        <!-- 跑腿 -->
        <LinearLayout
            android:id="@+id/post_errand"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:background="#F5F5F5"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:padding="16dp"
            android:layout_marginBottom="16dp"
            android:radius="12dp">

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="#E3F2FD"
                android:src="@drawable/ic_errand"
                app:tint="#2196F3"
                android:padding="8dp"
                android:layout_marginRight="16dp"
                android:scaleType="centerInside" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="跑腿"
                    android:textColor="#333333"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:text="帮拿快递、外卖，帮送物品等"
                    android:textColor="#999999"
                    android:textSize="13sp"
                    android:maxLines="2"
                    android:ellipsize="end" />
            </LinearLayout>

            <ImageView
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:src="@drawable/ic_arrow_right"
                app:tint="#999999"
                android:layout_marginLeft="8dp"
                android:scaleType="centerInside" />
        </LinearLayout>

        <!-- 二手集市 -->
        <LinearLayout
            android:id="@+id/post_second_hand"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:background="#F5F5F5"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:padding="16dp"
            android:layout_marginBottom="16dp"
            android:radius="12dp">

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="#E8F5E9"
                android:src="@drawable/ic_shopping"
                app:tint="#4CAF50"
                android:padding="8dp"
                android:layout_marginRight="16dp"
                android:scaleType="centerInside" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="二手集市"
                    android:textColor="#333333"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:text="发转卖、求购、悬赏等交易需求"
                    android:textColor="#999999"
                    android:textSize="13sp"
                    android:maxLines="2"
                    android:ellipsize="end" />
            </LinearLayout>

            <ImageView
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:src="@drawable/ic_arrow_right"
                app:tint="#999999"
                android:layout_marginLeft="8dp"
                android:scaleType="centerInside" />
        </LinearLayout>

        <!-- 失物招领 -->
        <LinearLayout
            android:id="@+id/post_lost_found"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:background="#F5F5F5"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:padding="16dp"
            android:radius="12dp">

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="#E0F7FA"
                android:src="@drawable/ic_find"
                app:tint="#00BCD4"
                android:padding="8dp"
                android:layout_marginRight="16dp"
                android:scaleType="centerInside" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="失物招领"
                    android:textColor="#333333"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:text="发布失物或招领信息"
                    android:textColor="#999999"
                    android:textSize="13sp"
                    android:maxLines="2"
                    android:ellipsize="end" />
            </LinearLayout>

            <ImageView
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:src="@drawable/ic_arrow_right"
                app:tint="#999999"
                android:layout_marginLeft="8dp"
                android:scaleType="centerInside" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>