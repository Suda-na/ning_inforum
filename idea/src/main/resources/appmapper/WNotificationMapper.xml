<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.app.dao.WNotificationMapper">

    <!-- Message结果集映射 -->
    <resultMap id="MessageMap" type="Message">
        <id property="messageId" column="message_id"/>
        <result property="senderId" column="sender_id"/>
        <result property="receiverId" column="receiver_id"/>
        <result property="messageType" column="message_type"/>
        <result property="title" column="title"/>
        <result property="content" column="content"/>
        <result property="msgFormat" column="msg_format"/>
        <result property="imageUrl" column="image_url"/>
        <result property="relatedType" column="related_type"/>
        <result property="isRead" column="is_read"/>
        <result property="readTime" column="read_time"/>
        <result property="createTime" column="create_time"/>
    </resultMap>

    <!-- 查询最新系统通知 -->
    <select id="selectLatestSystemNotification" resultMap="MessageMap">
        SELECT
            message_id,
            sender_id,
            receiver_id,
            message_type,
            title,
            content,
            msg_format,
            image_url,
            related_type,
            is_read,
            read_time,
            create_time
        FROM message
        WHERE message_type = 1
        ORDER BY create_time DESC
        LIMIT 1
    </select>

    <!-- 根据ID查询通知详情 -->
    <select id="selectNotificationById" resultMap="MessageMap">
        SELECT
            message_id,
            sender_id,
            receiver_id,
            message_type,
            title,
            content,
            msg_format,
            image_url,
            related_type,
            is_read,
            read_time,
            create_time
        FROM message
        WHERE message_id = #{messageId}
        AND message_type = 1
    </select>

    <!-- 查询系统通知列表（分页） -->
    <select id="selectSystemNotifications" resultMap="MessageMap">
        SELECT
            message_id,
            sender_id,
            receiver_id,
            message_type,
            title,
            content,
            msg_format,
            image_url,
            related_type,
            is_read,
            read_time,
            create_time
        FROM message
        WHERE message_type = 1
        ORDER BY create_time DESC
        <if test="start != null and size != null">
            LIMIT #{start}, #{size}
        </if>
    </select>

    <!-- 统计系统通知数量 -->
    <select id="countSystemNotifications" resultType="int">
        SELECT COUNT(*)
        FROM message
        WHERE message_type = 1
    </select>

</mapper>

